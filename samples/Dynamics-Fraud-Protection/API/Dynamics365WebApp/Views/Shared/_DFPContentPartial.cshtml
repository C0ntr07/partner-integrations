<script src="https://fpt.dfp.microsoft.com/mdt.js?session_id=@{@ViewBag.DfpSessionId}&instanceId=@{@ViewBag.DfpInstanceId}" type="text/javascript"></script>

<script>

        $(function () {
            LoadDfp();
        });

        function LoadDfp() {

            if (typeof dfp != "undefined") {

                dfp.doFpt(this.document)
            }
            else {

                setTimeout(function () {
                    LoadDfp();
                }, 1000);
            }
        }

</script>